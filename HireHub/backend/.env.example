# Backend environment example - copy to .env and fill real values
# Local development defaults are used if you omit values (PORT defaults to 3000)

# Server
PORT=3000
CLIENT_URL=http://localhost:5173
NODE_ENV=development

# Database
DB_URL=mongodb+srv://<user>:<password>@cluster0.mongodb.net/hirehub?retryWrites=true&w=majority

# Clerk (authentication)
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Stream (chat)
STREAM_API_KEY=
STREAM_API_SECRET=

# Inngest (optional)
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# Development helpers
# Set DISABLE_AUTH=true only for local development when you want a fake user auto-attached
DISABLE_AUTH=false
DEV_FAKE_CLERK_ID=dev_user
